<title>Login and Signup</title>
</head>

<body>
    <div class="container mt-5">
        <div class="row text-light">
            <div class="col-md-6">
                <h2>Login</h2>

                <form class="form login-form">
                    <div class="form-group">
                        <label class="form-label" for="email-login">Email</label>
                        <input type="text" name="userEmail" class="form-input" id="email-login" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="password-login">Password</label>
                        <input type="password" class="form-input" name="userPassword" id="password-login" />
                    </div>
                    <div class="form-group">
                        <button class="form-button" type="submit">Login</button>
                    </div>
                </form>
            </div>

            <div class="col-md-6">
                <h2>Signup</h2>

                <form class="form signup-form">
                    <div class="form-group">
                        <label class="form-label" for="name-signup">Name</label>
                        <input type="text" class="form-input" id="name-signup" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="email-signup">Email</label>
                        <input type="text" class="form-input" id="email-signup" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="password-signup">Password</label>
                        <input type="password" class="form-input" id="password-signup" />
                    </div>
                    <div class="form-group">
                        <button class="form-button" type="submit">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/login.js"></script>